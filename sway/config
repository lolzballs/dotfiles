set $nord9 #81A1C1
set $nord10 #5E81AC
set $nord11 #BF616A
set $nord12 #D08770
set $nord13 #EBCB8B
set $nord14 #A3BE8C
set $nord15 #B48EAD

#class                  border	    background	text		split
client.focused          $nord2		$nord2		$nord4		$nord9  $nord2
client.focused_inactive $nord1		$nord1      $nord4		$nord9  $nord1
client.unfocused        $nord1		$nord1      $nord4		$nord9  $nord1
client.urgent           $nord11		$nord6      $nord4		$nord9  $nord11
client.background       $nord3

include /etc/sway/config.d/*
