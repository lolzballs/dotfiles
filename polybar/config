background-soft = #ff32302f
foreground = #ffebdbb2

red = #ffcc241d
green = #ffb8bb26
yellow = #fffabd2f
blue = #ff83a598

[bar/base]
bottom = false
wm-restack = i3

width = 100%
height = 24
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = ${colors.blue}

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 1

font-0 = FiraMono:pixelsize=11;2
font-1 = FontAwesome:pixelsize=11;2

[bar/main]
inherit = bar/base
monitor=${env:MONITOR}
# monitor = ${env:MONITOR:eDP-1}
# monitor-fallback = ${env:MONITOR:eDP-1-1}
# monitor = ${env:MONITOR:DisplayPort-2}

modules-left = i3 xwindow
modules-center =
modules-right = systemspace s wlan s memory cpu s battery volume s date

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-padding = 2
format-background = ${colors.background-soft}
format-underline = ${colors.foreground}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-background = ${colors.background-light}
label-focused-underline = ${colors.foreground}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-visible = %index%
label-visible-background = ${colors.background-soft}
label-visible-padding = 2

[module/theme]
format-background = ${colors.background}
format-padding = 2
format-foreground = ${self.format-underline}

format-connected-background = ${module/theme.format-background}
format-unconnected-background = ${module/theme.format-background}
format-mounted-background = ${module/theme.format-background}
format-unmounted-background = ${module/theme.format-background}
format-charging-background = ${module/theme.format-background}
format-discharging-background = ${module/theme.format-background}

format-connected-padding = ${module/theme.format-padding}
format-unconnected-padding = ${module/theme.format-padding}
format-mounted-padding = ${module/theme.format-padding}
format-unmounted-padding = ${module/theme.format-padding}
format-charging-padding = ${module/theme.format-padding}
format-discharging-padding = ${module/theme.format-padding}

format-mounted-foreground = ${self.format-mounted-underline}
format-unmounted-foreground = ${self.format-unmounted-underline}

[module/systemspace]
inherit = module/theme
type = internal/fs
interval = 20
mount-0 = /
label-mounted = " %free%"
label-unmounted = " ??"
format-mounted-underline = ${colors.blue}
format-unmounted-underline = ${colors.red}

[module/cpu]
inherit = module/theme
type = internal/cpu
interval = 2
format-prefix = " "
format-underline = ${colors.red}
label = %percentage%%

[module/memory]
inherit = module/theme
type = internal/memory
interval = 2
format-prefix = " "
format-underline = ${colors.yellow}
label = %gb_used%

[module/wlan]
inherit = module/theme
type = internal/network
interface = wlp2s0
interval = 1

format-connected = <label-connected>
format-connected-underline = ${colors.blue}
format-disconnected-underline = ${colors.red}

label-connected = " %signal% [  %downspeed% ] [  %upspeed% ]"
label-disconnected = "OFFLINE"
label-connected-foreground = ${colors.green}
label-disconnected-foreground = ${colors.red}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/date]
inherit = module/theme
type = internal/date
interval = 1

time = "%a - %d.%m.%Y - %H:%M:%S"
#time-alt = "%a - %d.%m.%Y - %I:%M %p"

format-prefix = " "
format-underline = ${colors.foreground}

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-padding = 2

time-format = %H:%M

format-charging-padding = ${self.format-padding}
format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.green}

format-discharging-padding = ${self.format-padding}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
label-discharging = "%percentage%% %time%"

format-full-padding = ${self.format-padding}
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
