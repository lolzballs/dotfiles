[global/wm]
margin-top = 5
margin-bottom = 5

[colors]
nord0 =  #2E3440
nord1 =  #3B4252
nord2 =  #434C5E
nord3 =  #4C566A
nord4 =  #D8DEE9
nord5 =  #E5E9F0
nord6 =  #ECEFF4
nord7 =  #8FBCBB
nord8 =  #88C0D0
nord9 =  #81A1C1
nord10 = #5E81AC
nord11 = #BF616A
nord12 = #D08770
nord13 = #EBCB8B
nord14 = #A3BE8C
nord15 = #B48EAD

[bar/base]
bottom = false
wm-restack = i3

width = 100%
height = 32
offset-x = 0
offset-y = 0
border-left-size = 16
border-right-size = 16
border-top-size = 16

background = ${colors.nord0}
foreground = ${colors.nord4}

# overline-size = 2
# overline-color = #f00
underline-size = 2
underline-color = ${colors.nord8}

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 1

font-0 = Monospace:pixelsize=11;2
font-1 = Font\ Awesome:pixelsize=11;2

[bar/main]
inherit = bar/base
monitor=${env:MONITOR}
# monitor = ${env:MONITOR:eDP-1}
# monitor-fallback = ${env:MONITOR:eDP-1-1}
# monitor = ${env:MONITOR:DisplayPort-2}

modules-left = i3 xwindow
modules-center = 
modules-right = memory cpu battery pulseaudio date

tray-position = right
tray-padding = 2
tray-background = ${colors.nord1}

[module/theme]
format-padding = 2
format-background = ${colors.nord1}
format-foreground = ${colors.nord4}

[module/xwindow]
type = internal/xwindow
inherit = module/theme
label = %title:0:30:...%

[module/spotify]
type = custom/script
inherit = module/theme
exec = { playerctl metadata title; echo -n " - "; playerctl metadata artist; }
interval = 2


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.nord4}
label-mode-background = ${colors.nord3}

label-focused = %index%
label-focused-background = ${colors.nord1}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-foreground = ${colors.nord3}
label-unfocused-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.nord11}
label-urgent-padding = 2

label-visible = %index%
label-visible-foreground = ${colors.nord3}
label-visible-padding = 2

[module/systemspace]
type = internal/fs
inherit = module/theme
interval = 20
mount-0 = /
label-mounted = " %free%"
label-mounted-padding = ${self.format-padding}
label-mounted-background = ${self.format-background}

[module/cpu]
type = internal/cpu
inherit = module/theme
interval = 2
format-prefix = " "
label = %percentage%%

[module/memory]
type = internal/memory
inherit = module/theme
interval = 2
format-prefix = " "
label = %gb_used%

[module/date]
type = internal/date
inherit = module/theme
interval = 1
time = "%a - %Y.%m.%d - %H:%M:%S"
format-prefix = " "
label = %date% %time%

[module/battery]
type = internal/battery
inherit = module/theme
battery = BAT0
adapter = AC
full-at = 99

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-charging-padding = ${self.format-padding}
format-charging-background = ${colors.nord1}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = ${self.format-padding}
format-discharging-background = ${colors.nord1}
label-discharging = "%percentage%% %time%"

format-full-prefix = " "
format-full-padding = ${self.format-padding}
format-full-background = ${colors.nord1}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/pulseaudio]
type = internal/pulseaudio
inherit = module/theme

mapping = true

label-volume = " %percentage%%"
label-volume-padding = ${self.format-padding}
label-volume-background = ${self.format-background}
label-muted = "  %percentage%%"
label-muted-padding = ${self.format-padding}
label-muted-background = ${colors.nord11}

